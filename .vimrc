
set background=dark

" -----------------------------------------------------------------------------
" [検索]
" 大文字小文字を区別しない
" 大文字小文字が含まれているときは区別
" -----------------------------------------------------------------------------
set ignorecase
set smartcase

set incsearch
set hlsearch

set wrapscan
set showmatch


" -----------------------------------------------------------------------------
" [編集]
" -----------------------------------------------------------------------------
set tabstop=4
set softtabstop=4
set shiftwidth=4
set backspace=indent,eol,start

set cindent
set cinoptions+=:0,g0

set formatoptions+=mM

syntax enable
